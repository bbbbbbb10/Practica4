<Window x:Class="Practica4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica4"
        mc:Ignorable="d"
        Title="Угадай число"
        Height="650"
        Width="850"
        MinWidth="600"
        MinHeight="600"
        
        FontFamily="Segoe UI">
    <Window.Background>
        <ImageBrush ImageSource="Images/Aizen.jpg"
                    Stretch="UniformToFill" />
    </Window.Background>
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="#FF007ACC" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="10,6" />
            <Setter Property="Margin"
                    Value="6" />
            <Setter Property="MinWidth"
                    Value="100" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#0099FF" />
                </Trigger>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter Property="Background"
                            Value="#555555" />
                    <Setter Property="Foreground"
                            Value="#AAAAAA" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Margin"
                    Value="6" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background"
                    Value="#3E3E42" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="6" />
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="TextAlignment"
                    Value="Center" />
            <Setter Property="MinWidth"
                    Value="100" />
        </Style>

        <Style TargetType="Border">
            <Setter Property="CornerRadius"
                    Value="10" />
            <Setter Property="Padding"
                    Value="15" />
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- имя игрока блок -->
        <Border Grid.Row="0"
                Background="#252526"
                Margin="0,0,0,10"
                Opacity="0.8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Имя игрока:"
                           FontSize="16"
                           FontWeight="Bold"
                           Grid.Column="0" />

                <TextBox x:Name="PlayerNameInput"
                         Width="200"
                         Margin="10,0"
                         Text="Игрок"
                         Grid.Column="1" />

                <Button x:Name="ChangeNameButton"
                        Content="Изменить"
                        MinWidth="80"
                        Grid.Column="2"
                        Click="ChangeNameButton_Click"
                        Margin="6,0,6,0" />
            </Grid>
        </Border>

        <!-- угадай число блок -->
        <Border Grid.Row="1"
                Background="#252526"
                Opacity="0.9"
                Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="УГАДАЙ ЧИСЛО"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Foreground="#FFDCDCAA"
                           Margin="0,0,0,10" />

                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,5">
                    <TextBlock Text="Число:"
                               FontSize="16"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="NumberInput"
                             Width="80"
                             Margin="10,0"
                             KeyDown="NumberInput_KeyDown" />
                    <Button x:Name="CheckButton"
                            Content="Проверить"
                            MinWidth="100"
                            Margin="10,0,0,0"
                            Click="CheckButton_Click"
                            Height="37"
                            Width="104" />
                </StackPanel>

                <TextBlock x:Name="HintText"
                           Grid.Row="2"
                           Text="Введите число от 1 до 100"
                           HorizontalAlignment="Center"
                           FontSize="16"
                           Margin="0,10"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           FontWeight="SemiBold" />

                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,8">
                    <TextBlock Text="Попыток: "
                               FontSize="16" />
                    <TextBlock x:Name="AttemptsText"
                               Text="0"
                               FontSize="16"
                               FontWeight="Bold" />
                </StackPanel>

                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10">
                    <Button x:Name="NewGameButton"
                            Content="Новая игра"
                            MinWidth="120"
                            FontSize="14"
                            Margin="0,0,10,0"
                            Click="NewGameButton_Click"
                            Height="39"
                            Width="127" />
                    <Button x:Name="SaveButton"
                            Content="Сохранить результат"
                            MinWidth="140"
                            FontSize="14"
                            Click="SaveButton_Click"
                            Height="33"
                            Width="151">
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Background"
                                        Value="#5D4037" />
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled"
                                             Value="False">
                                        <Setter Property="Background"
                                                Value="#555555" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Таблица лидеров  -->
        <Border Grid.Row="2"
                Background="#252526"
                Opacity="0.9">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="ТАБЛИЦА ЛИДЕРОВ"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Foreground="#FFDCDCAA"
                           Margin="0,0,0,5" />

                <DataGrid x:Name="ResultsGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          Margin="0,5"
                          Background="#1E1E1E"
                          RowBackground="#3E3E42"
                          AlternatingRowBackground="#2D2D30"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          FontSize="13">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Имя"
                                            Binding="{Binding PlayerName}"
                                            Width="*" />
                        <DataGridTextColumn Header="Попытки"
                                            Binding="{Binding Attempts}"
                                            Width="0.5*" />
                        <DataGridTextColumn Header="Дата"
                                            Binding="{Binding Date, StringFormat=dd.MM.yyyy}"
                                            Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>